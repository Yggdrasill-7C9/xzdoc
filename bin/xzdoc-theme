#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander'),
  path = require('path'),
  xzdoc = require('../');

// options
program
  .option('-s, --skin <folder>', 'where is the skin.', 'default');

program.on('--help', function () {
  console.log('  Commands:');
  console.log('');
  console.log('    list          show all api docs theme');
  console.log('    export        export theme');
  console.log('');
  console.log('  Examples:');
  console.log('');
  console.log('    $ xzdoc theme list');
  console.log('');
  process.exit();
});

program.parse(process.argv);

// command
var cmd = program.args[0];

// display help
function showHelp() {
  process.stdout.write(program.helpInformation());
  program.emit('--help');
}

if (!cmd) {
  return showHelp();
}

if (cmd === 'list') {
  console.log(xzdoc.list());
} else if (cmd === 'export') {
  xzdoc.export(program.skin, function () {
    console.log('Exported at "' + path.resolve('.') + '".');
    console.log('You can edit "' + path.resolve('.', 'xzdoc-templates/' + program.skin) + '" for custom theme style.');
  });
} else {
  return showHelp();
}
